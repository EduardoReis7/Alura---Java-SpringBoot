package br.com.loiane.exercicio4;

public class Exercicio4 {

	public static void main(String[] args) {
		int paisA = 80000;
		int paisB = 200000;
		
		double taxaPaisA = paisA * 0.03;
		double taxaPaisB = paisB * 0.015;
		
		int anos = 0;
		while (paisA <= paisB) {
			
			paisA += taxaPaisA;
			paisB += taxaPaisB;
			anos++;
		}
		System.out.println(anos);
		
	}

}
