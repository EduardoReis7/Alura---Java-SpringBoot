package br.com.loiane.exercicios;

public class Exercicio1 {

	public static void main(String[] args) {

		for ( int i = 0, j = 10; i < j ; i++ , j--) {
			System.out.println("i = " + i + ", j = " + j);
		}
		
		int soma = 0;
		
		for ( int i = 1; i < 10; soma += i++);
		System.out.println("Soma: " + soma);
	}

}
